#include <iostream>
using namespace std;
int main() {
   int n,t=2,f,T;
   cin>>n;
   for(int i=1;i<=n;i++)
   {   int k=i;
       for(int j=1;j<=n;j++)
       {
           if(i+j>n)
           {
               cout<<k;
               k++;
           }
           else
           cout<<" ";
       }
       for(int j=1;j<=i-1;j++)
       {
            cout<<t;
            if(j==1)
           {
               T=t; 
           }
            t--;
       }
       t=T+2;
      cout<<endl;
   }
    return 0;
}
